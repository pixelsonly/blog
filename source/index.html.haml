---
  title: pixelsonly.com
---
= partial 'header'
%section.recent-articles
  %ul.no-bullet
    - all_articles[0...1].each do |article|
      %li
        %article.featured-article-preview
          %a{href: "/articles/#{article.slug}", title: "Read #{article.title} by #{author.name}"}
            %figure
              %figcaption
                .row
                  .small-12.columns
                    %time.publish-date
                      = format_date(article.date)
                    %h1.article-title
                      = article.title
              %img{src: "#{article.featuredImage.url}?&fm=jpg&fl=progressive", alt: article.featuredImage.description }
    - all_articles[1..3].each do |article|
      %li
        %article.article-preview
          %a{href: "/articles/#{article.slug}", title: "Read #{article.title} by #{author.name}"}
            .row
              .small-3.columns
                %img{src: "#{article.featuredImage.url}?&w=200&h=200&fit=thumb&fm=jpg&fl=progressive", alt: article.featuredImage.description, class: 'article-thumbnail' }
              .small-9.columns
                %time.publish-date
                  = format_date(article.date)
                %h2.article-title
                  = article.title
              .small-12.columns
                %hr
  .row
    .small-6.medium-3.large-2.columns.end
      = link_to '/articles', title: 'All Articles', class: 'hollow button small expanded' do
        %strong
          More Articles
