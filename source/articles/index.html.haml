- current_page.data[:view_class] = 'articles-index'
- current_page.data[:title] = 'Ryan Lindsey - Thoughts on code, gadgets, and adventure.'
- current_page.data[:og_images] = [{url: "#{author.profilePhoto.url}?w=600&h=600&r=1000&fm=jpg&fl=progressive", width: 600, height: 600}]

= partial 'header'
%main{role: 'main', itemprop: 'mainEntityOfPage'}
  .row
    .small-12.columns
      %nav{role: 'navigation'}
        %ul.breadcrumbs
          %li
            = link_to 'Recent', '/', title: 'Recent Articles'
          %li.disabled
            Articles
  - all_articles.each do |article|
    %article.article-preview-with-image{itemscope: '', itemtype: 'http://schema.org/Article'}
      .row.small-collapse.medium-uncollapse
        .small-12.columns
          = link_to "/articles/#{article.slug}", title: article.title, itemprop: 'url' do
            %figure
              = image_tag "#{article.featuredImage.url}?&w=1000&h=420&fit=fill&fm=jpg&fl=progressive", alt: article.featuredImage.description, width: '1000px', height: '420px', itemprop: 'image'
              %figcaption
                %time.publish-date{itemprop: 'datePublished', content: microdata_date(article.date)}
                  = publish_date(article.date)
                %h1.article-title{itemprop: 'headline'}
                  = article.title
      .row
        .small-12.columns
          %p.blurb{itemprop: 'description'}
            = article.blurb
          %p
            = link_to "/articles/#{article.slug}", title: "Read More - #{article.title} by #{author.name}", class: 'small hollow secondary button', itemprop: 'url' do
              Read More
