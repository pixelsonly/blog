%meta{property: 'og:site_name', content: 'pixelsonly'}
%meta{property: 'og:type', content: 'website'}
%meta{property: 'og:url', content: config[:host] + current_page.url}
%meta{property: 'og:title', content: current_page.data.title}
- if current_page.data.og_images?
  - current_page.data.og_images.each do |image|
    %meta{property: 'og:image', content: image.url}
    %meta{property: 'og:image:type', content: 'image/jpg'}
    %meta{property: 'og:image:width', content: image.width}
    %meta{property: 'og:image:height', content: image.height}
%meta{property: 'twitter:site', content: '@pixelsonly'}
%meta{property: 'twitter:title', content: current_page.data.title}
