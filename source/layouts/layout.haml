!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'width=device-width', name: 'viewport'}
    %title
      = current_page.data.title || 'pixelsonly'
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Open+Sans|Vollkorn:700'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
    = stylesheet_link_tag 'app.bundle'
  %body{class: page_classes}
    = yield
    = javascript_include_tag 'app.bundle'
