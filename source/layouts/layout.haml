!!!
%html{lang: 'en'}
  %head
    %title
      = current_page.data.title || data.site.title
    %meta{charset: 'utf-8'}
    %meta{content: 'width=device-width', name: 'viewport'}
    = partial 'meta'
    %link{rel: 'canonical', href: config[:host] + current_page.url}
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Open+Sans:400,700,800|Vollkorn:400,700'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
    = stylesheet_link_tag 'highlight'
    = stylesheet_link_tag 'app.bundle'
  %body{class: current_page.data.view_class || 'index'}
    .row
      .small-12.columns.text-right
        %button.js-menu-toggle{id: 'menu-open'}
          = image_tag 'assets/images/menu--control-open.svg'
    = yield
    = partial 'footer'
    = partial 'menu'
    = javascript_include_tag 'app.bundle'
    = yield_content :article_comments
    - if config[:environment] = :production
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-2516002-12', 'auto');
        ga('send', 'pageview');
