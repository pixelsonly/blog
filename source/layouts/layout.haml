!!!
%html
  %head
    %title
      = current_page.data.title || 'Ryan Lindsey'
    %meta{charset: 'utf-8'}
    %meta{content: 'width=device-width', name: 'viewport'}
    = partial 'meta'
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Open+Sans:400,700,800|Vollkorn:400,700'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
    = stylesheet_link_tag 'highlight'
    = stylesheet_link_tag 'app.bundle'
  %body{class: current_page.data.view_class}
    = yield
    %footer
      .row
        .small-12.medium-6.columns
          %p.social-links.text-center.medium-text-left
            = link_to data.site.social.github.url, title: 'GitHub', class: 'social-link' do
              %i.fa.fa-github.fa-fw
            = link_to data.site.social.linkedin.url, title: 'LinkedIn', class: 'social-link' do
              %i.fa.fa-linkedin.fa-fw
            = link_to data.site.social.instagram.url, title: 'Instagram', class: 'social-link' do
              %i.fa.fa-instagram.fa-fw
            = link_to data.site.social.twitter.url, title: 'Twitter', class: 'social-link' do
              %i.fa.fa-twitter.fa-fw
        .small-12.medium-6.columns
          %p.copyright.text-center.medium-text-right
            &copy;
            = DateTime.now.year
            Ryan Lindsey. All rights reserved.
      .row
        .small-12.columns.text-center.medium-text-left
          %p
            = link_to 'https://netlify.com', title: 'Deploys by Netlify' do
              = image_tag 'https://www.netlify.com/img/global/badges/netlify-color-accent.svg', alt: 'Netlify Logo', class: 'netlify-badge'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js'
    = javascript_include_tag 'app.bundle'
